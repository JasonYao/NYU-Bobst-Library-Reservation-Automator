#!/bin/bash -e

# Creates a sandboxed environment
clear

BASEDIR=`dirname $0`/..

if [ ! -d "$BASEDIR/.env" ]; then
    virtualenv -q $BASEDIR/.env --no-site-packages
    echo "Virtualenv created in subfolder .env"
fi

if [ ! -f "$BASEDIR/.env/updated" -o $BASEDIR/requirements.pip -nt $BASEDIR/.env/updated ]; then
    pip install -r $BASEDIR/requirements.pip -E $BASEDIR/.env
    touch $BASEDIR/.env/updated
    echo "Requirements installed."
fi
